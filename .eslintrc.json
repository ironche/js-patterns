{
  "root": true,
  "plugins": [
    "jasmine"
  ],
  "env": {
    "browser": false,
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "func-names": "off",
    "space-before-function-paren": ["error", "never"],
    "no-use-before-define": [
      "error", {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ]
  }
}
